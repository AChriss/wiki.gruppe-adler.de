.custom-block {
    &.tip {
        border-color: #66AA66 !important;
    }

    &.warning {
        background-color: rgba(#D18D1F,0.3) !important;
        border-color: #D18D1F !important;
        color: darken(#D18D1F, 70%) !important;

        .custom-block-title {
            color: #D18D1F !important;
        }
    }

    &.danger {
        background-color rgba(#8F1167,0.3) !important;
        border-color #8F1167 !important;
        color: darken(#8F1167, 70%) !important;
        .custom-block-title {
            color: #8F1167 !important;
        }
    }
}


.theme-container.grad-landing-page {
    height 100vh;

    .page {
        height 100%;
        padding: 0px;
        display: flex;
        flex-direction: column;

        .content {
            height 100%;
            margin-top: 0px;
            margin-bottom: 0px;
            padding-top: 0px;
            padding-bottom: 0px;
            display: flex;
            align-content: center;

            > *:first-child {
                margin-top: 0;
                margin-bottom: 3.6rem;
            }
        }
    }
}